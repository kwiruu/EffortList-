<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="1dp" android:bottom="2dp" android:left="20dp" android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <corners android:radius="5dp" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" /> <!-- Adjust border color and width as needed -->
            <padding android:right="5dp"
                android:bottom="5dp"
                android:left="10dp"
                android:top="10dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:bottom="2dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1.5dp"
                android:color="@android:color/black" /> <!-- Adjust border color and width as needed -->
            <padding android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</layer-list>
